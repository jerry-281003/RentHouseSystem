@model List<HouseSearchModel>



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>House Listings</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="index.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-white shadow-sm sticky-top">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img src="https://images.unsplash.com/photo-1560518883-ce09059eeffa" width="40" height="40" class="rounded-circle" alt="Logo">
                HomeList
            </a>
            <div class="d-flex flex-grow-1 px-4">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for houses...">
                    <button class="btn btn-primary"><i class="bi bi-search"></i></button>
                </div>
            </div>

        </div>
    </nav>

    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-lg-3 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Filters</h5>

                        <form id="form-submit" asp-controller="Houses" asp-action="Filter" method="get">
                            @foreach (var house in Model)
                            {
                                <input type="hidden" name="id" value="@house.HouseId">
                            }
                            <div class="mb-4">
                                <label class="form-label">Facilities</label>
                                <!-- Pets Allowed Checkbox -->
                                <div class="form-check">
                                    <input type="hidden" id="petsHidden" name="pets" value="false">
                                    <input class="form-check-input" name="pets" type="checkbox" id="pets" value="true"
                                           onchange="toggleHiddenInput(this, 'petsHidden')">
                                    <label class="form-check-label" for="pets">Pets Allowed</label>
                                </div>

                                <!-- Air Conditioning Checkbox -->
                                <div class="form-check">
                                    <input type="hidden" id="acHidden" name="ac" value="false">
                                    <input class="form-check-input" name="ac" type="checkbox" id="ac" value="true"
                                           onchange="toggleHiddenInput(this, 'acHidden')">
                                    <label class="form-check-label" for="ac">Air Conditioning</label>
                                </div>

                                <button type="submit">Filter</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="row g-4">
                @foreach (var house in Model)
                {
                    <div class="col-md-6 col-lg-4">

                        <div class="card h-100 shadow-sm">

                            <form id="form-submit" asp-controller="Admin" asp-action="DetailHouse" method="get">
                                <input type="hidden" name="id" value="@house.HouseId">
                                <button type="submit" style="border: none; background: none; padding: 0;">
                                    <img src="@house.ImageUrls" class="card-img-top" alt="House">
                                </button>
                            </form>


                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <h5 class="card-title mb-0">@house.title</h5>
                                    <span class="badge bg-primary">@house.Address</span>
                                </div>
                                <p class="card-text text-muted">@house.Description</p>
                                <div class="d-flex align-items-center mb-3">
                                    <i class="bi bi-geo-alt-fill text-primary me-2"></i>
                                    <small>@house.Address</small>
                                </div>

                            </div>


                        </div>

                    </div>
                }

                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
                <script>
                    function toggleHiddenInput(checkbox, hiddenInputId) {
                        const hiddenInput = document.getElementById(hiddenInputId);
                        if (checkbox.checked) {
                            hiddenInput.disabled = true; // Disable hidden input when checkbox is checked
                        } else {
                            hiddenInput.disabled = false; // Enable hidden input when checkbox is unchecked
                        }
                    }
                </script>
</body>
</html>