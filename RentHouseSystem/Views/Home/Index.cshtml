    <script>
        // Fetch provinces on page load
        window.onload = async function () {
            try {
                const response = await fetch('https://provinces.open-api.vn/api/p/');
                const provinces = await response.json();

                const provinceSelect = document.getElementById('province-select');

                // Populate provinces dropdown
                provinces.forEach(province => {
                    const option = document.createElement('option');
                    option.value = province.name; // Use province name as the value
                    option.textContent = province.name; // Display province name
                    provinceSelect.appendChild(option);
                });

                // Enable the province dropdown
                provinceSelect.disabled = false;
            } catch (error) {
                console.error('Error fetching provinces:', error);
            }
        };

        // Fetch districts when a province is selected
        document.getElementById('province-select').addEventListener('change', async function () {
            const provinceName = this.value; // Get selected province name
            const districtSelect = document.getElementById('district-select');
            districtSelect.innerHTML = '<option selected disabled>Select a District</option>'; // Reset districts
            districtSelect.disabled = true; // Disable until data is fetched

            try {
                const response = await fetch('https://provinces.open-api.vn/api/p/');
                const provinces = await response.json();
                const selectedProvince = provinces.find(province => province.name === provinceName);

                if (!selectedProvince) {
                    console.error('Province not found');
                    return;
                }

                const districtsResponse = await fetch(`https://provinces.open-api.vn/api/p/${selectedProvince.code}?depth=2`);
                const provinceData = await districtsResponse.json();

                // Populate districts dropdown
                provinceData.districts.forEach(district => {
                    const option = document.createElement('option');
                    option.value = district.name; // Use district name as the value
                    option.textContent = district.name; // Display district name
                    districtSelect.appendChild(option);
                });

                // Enable the district dropdown
                districtSelect.disabled = false;
            } catch (error) {
                console.error('Error fetching districts:', error);
            }
        });
    </script>






